<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pretasi_project_add_mrp_boq" model="ir.ui.view">
            <field name="name">Pretasi MRP - Add BOQ to Project</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_create_boq" icon="fa-list-alt" class="oe_stat_button" type="object"
                            string="Create BOQ" attrs="{'invisible': [('boq_count', '>', 0)]}">

                    </button>
                    <button name="action_open_boq" icon="fa-list-alt" class="oe_stat_button" type="object"
                            attrs="{'invisible': [('boq_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="boq_count" nolabel="1" widget="statinfo"/>
                            </span>
                            <span class="o_stat_text">Bill of Qty</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>