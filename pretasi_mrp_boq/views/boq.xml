<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pretasi_mrp_boq_tree_view" model="ir.ui.view">
            <field name="name">Pretasi - MRP BOQ Tree View</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='routing_id']" position="after">
                    <field name="boq"/>
                </xpath>
            </field>
        </record>

        <record id="pretasi_mrp_boq_form_view" model="ir.ui.view">
            <field name="name">Pretasi - MRP BOQ Form View</field>
            <field name="model">mrp.boq</field>
            <field name="inheri_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_create_or_open_mo" type="object" icon="fa-gears"
                                    class="oe_stat_button" states="confirmed">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="production_count" widget="statinfo" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">Manufactured</span>
                                </div>
                            </button>
                </xpath>
                <xpath expr="//label[@for='product_qty']" position="before">
                    <field name="length"/>
                </xpath>
                <xpath expr="//field[@name='type']" position="before">
                    <field name="boq"/>
                </xpath>
                <xpath expr="//page[2]" position="after">
                    <page attrs="{'invisible': [('boq', '=', False)]}" name="concrete" string="Concrete">
                        <field name="concrete_qty_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="density"/>
                                <field name="vol" sum="Total Vol"/>
                            </tree>
                        </field>
                    </page>
                    <page attrs="{'invisible': [('boq', '=', False)]}" name="rebar" string="Rebars">
                        <field name="rebar_qty_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="diameter_code"/>
                                <field name="bar_mark"/>
                                <field name="bar_length"/>
                                <field name="member_length"/>
                                <field name="spacing"/>
                                <field name="no_in_member"/>
                                <field name="no_of_member"/>
                                <field name="total_length" sum="Total Length"/>
                                <field name="total_weight" sum="Total Weight"/>
                                <field name="sketch"/>
                            </tree>
                        </field>
                    </page>
                    <page attrs="{'invisible': [('boq', '=', False)]}" name="pvc_pipe" string="PVC Pipe">
                        <field name="pvc_pipe_qty_ids">
                            <tree editable="bottom">
                                <field name="product_id" invisible="1"/>
                                <field name="length"/>
                                <field name="no_in_member"/>
                                <field name="no_of_member"/>
                                <field name="total_length" sum="Total Length"/>
                            </tree>
                        </field>
                    </page>
                    <page attrs="{'invisible': [('boq', '=', False)]}" name="pc_strand" string="PC Strand">
                                <field name="pc_strand_qty_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" invisible="1"/>
                                        <field name="length"/>
                                        <field name="no_in_member"/>
                                        <field name="bed_line"/>
                                        <field name="total_cast"/>
                                        <field name="total_length" sum="Total Length"/>
                                        <field name="total_weight" sum="Total Weight"/>
                                    </tree>
                                </field>
                            </page>
                </xpath>
                <xpath expr="//page[1]" position="attributes">
                    <attribute name="attrs">{'invisible': [('boq', '=', True)]}</attribute>
                </xpath>
