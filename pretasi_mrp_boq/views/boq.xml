<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pretasi_mrp_boq_tree_view" model="ir.ui.view">
            <field name="name">Pretasi - MRP BOQ Tree View</field>
            <field name="model">mrp.boq</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <!--<field name="product_uom_id"/>-->
                    <field name="cast"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="pretasi_mrp_boq_form_view" model="ir.ui.view">
            <field name="name">Pretasi - MRP BOQ Form View</field>
            <field name="model">mrp.boq</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" type="object" class="btn-primary" string="Confirm" states="draft"/>

                        <button name="action_cancel" type="object" class="btn" string="Cancel" states="confirmed"/>
                        <button name="action_set_to_draft" type="object" class="btn" string="Set to Draft" states="cancelled"/>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_create_or_open_mo" type="object" icon="fa-gears"
                                    class="oe_stat_button" states="confirmed">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="production_count" widget="statinfo" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">Manufactured</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Bill of Quantity reference" nolabel="1"/></h1>
                        </div>
                        <group name="main">
                            <group>
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <!--<field name="product_uom_id"/>-->
                            </group>
                            <group>
                                <field name="cast"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="concrete" string="Concrete">
                                <field name="concrete_qty_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="density"/>
                                        <field name="vol" sum="Total Vol"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="rebar" string="Rebars">
                                <field name="rebar_qty_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="diameter_code"/>
                                        <field name="bar_mark"/>
                                        <field name="bar_length"/>
                                        <field name="member_length"/>
                                        <field name="spacing"/>
                                        <field name="no_in_member"/>
                                        <field name="no_of_member"/>
                                        <field name="total_length" sum="Total Length"/>
                                        <field name="total_weight" sum="Total Weight"/>
                                        <field name="sketch"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="pvc_pipe" string="PVC Pipe">
                                <field name="pvc_pipe_qty_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" invisible="1"/>
                                        <field name="length"/>
                                        <field name="no_in_member"/>
                                        <field name="no_of_member"/>
                                        <field name="total_length" sum="Total Length"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="pc_strand" string="PC Strand">
                                <field name="pc_strand_qty_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" invisible="1"/>
                                        <field name="length"/>
                                        <field name="no_in_member"/>
                                        <field name="bed_line"/>
                                        <field name="total_cast"/>
                                        <field name="total_length" sum="Total Length"/>
                                        <field name="total_weight" sum="Total Weight"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="pretasi_mrp_boq_sketch_form_view" model="ir.ui.view">
            <field name="name">rebar.quantity.sketch</field>
            <field name="model">rebar.quantity.sketch</field>
            <field name="arch" type="xml">
                <form>
                    <field name="line_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="value"/>
                        </tree>
                    </field>
                    <group>
                        <group>
                            <field name="total_length"/>
                        </group>
                        
                        <group>
                            <field name="display_name"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="pretasi_mrp_rebar_qty_spacing_form_view" model="ir.ui.view">
            <field name="name">rebar.quantity.spacing</field>
            <field name="model">rebar.quantity.spacing</field>
            <field name="arch" type="xml">
                <form>
                    <group>

                        <group>
                            <field name="p1"/>
                            <field name="p2"/>
                            <field name="p3"/>
                        </group>
                        <group>
                            <field name="x"/>
                            <field name="y"/>
                            <field name="z"/>
                        </group>
                    </group>
                    <group>
                        <field name="display_name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="pretasi_mrp_boq_view_action" model="ir.actions.act_window">
            <field name="name">Bill of Quantity</field>
            <field name="res_model">mrp.boq</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help"></field>
        </record>

        <menuitem id="pretasi_mrp_boq_menu" action="pretasi_mrp_boq_view_action"
                  name="Bill of Quantity" parent="mrp.menu_mrp_bom" sequence="25"/>
    </data>
</odoo>